<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FCFCFC"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/toolbar_title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="보유종목(관심)" />
    </androidx.appcompat.widget.Toolbar>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="346dp"
        android:layout_marginBottom="347dp"
        android:text="버트은 "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/horizontalScrollView2" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView2"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toStartOf="@+id/button25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#40FCFCFC"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="최근조회종목"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="보유종목(국내)"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="보유종목(해외)"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="특징종목"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="기본그룹"
                android:textStyle="bold" />

        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/button25"
        android:layout_width="43dp"
        android:layout_height="47dp"
        android:layout_marginTop="58dp"
        android:background="@drawable/empty"
        android:backgroundTint="#00ff0000"
        android:text="X"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/horizontalScrollView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shadow"
        app:layout_constraintTop_toTopOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/cardview"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView2" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"

        android:text="39002406-010    종합매매"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="@id/textView8"
        app:layout_constraintTop_toTopOf="@+id/textView8" />

    <EditText
        android:id="@+id/editTextNumberPassword"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:inputType="numberPassword"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@id/textView10"
        app:layout_constraintTop_toTopOf="@+id/textView8"

        />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="10dp"
        android:background="#80646464"
        app:layout_constraintTop_toTopOf="@+id/textView8"
        tools:layout_editor_absoluteX="10dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="105dp"
        android:text="상세보기"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/textView8" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/grd"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        app:alignmentMode="alignBounds"

        app:columnCount="6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:rowCount="12">


        <TextView
            android:layout_width="147dp"
            android:paddingStart="15dp"
            android:text="NAVER"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_columnSpan="2"
            app:layout_gravity="fill_vertical" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:text="103,000"
            android:textAlignment="textEnd"
            android:textColor="#2196F3"
            android:textSize="10sp"
            app:layout_gravity="fill_horizontal"
            app:layout_rowSpan="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="▼"
            android:textColor="#2196F3"
            android:textSize="15dp"
            app:layout_gravity="fill"
            app:layout_rowSpan="2" />

        <TextView
            android:layout_width="50dp"
            android:paddingTop="10dp"
            android:text="3,000"
            android:textAlignment="center"
            android:textColor="#2196F3" />

        <TextView
            android:layout_width="15dp"
            android:layout_height="50dp"
            android:text="9"
            app:layout_column="8"
            app:layout_gravity="fill_horizontal"
            app:layout_row="0"
            app:layout_rowSpan="2" />

        <TextView
            android:layout_width="85dp"
            android:paddingStart="10dp"
            android:text="1,972,500" />

        <TextView
            android:layout_width="62dp"
            android:text="" />

        <TextView
            android:layout_width="50dp"
            android:text="2.83%"
            android:textAlignment="center"
            android:textColor="#03A9F4" />

    </androidx.gridlayout.widget.GridLayout>





</androidx.constraintlayout.widget.ConstraintLayout>